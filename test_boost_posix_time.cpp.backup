#include <iostream>
#include <boost/date_time/local_time/local_time.hpp>
#include <sstream>

using namespace std;

void LocalTime()
{
    boost::posix_time::ptime now = boost::posix_time::second_clock::local_time();
    stringstream ss; ss << now;
    cout << ss.str() << endl;

}
int main()
{

    LocalTime();

}
