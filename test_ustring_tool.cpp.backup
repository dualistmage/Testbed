#include <iostream>
#include <wiselib/ustring/UString.h>

using namespace std;

int main()
{
    { // operator[] and at() boundary test 
        wiselib::UString test("가난닫다", wiselib::UString::UTF_8);
        wiselib::UString test2, test3;
        wiselib::ustring_tool::processKoreanDecomposer(test, test2);
        cout << "Length : " << test.length() << " , " << test2.length() << endl;
        size_t length = test2.length();
        cout << "Test2 value : ";
        for(size_t i = 0; i < length; i++)
            printf("%x ", test2[i]);
        cout << endl;

        wiselib::ustring_tool::processKoreanComposer(test2, test3);
        cout << "Output :"; test3.displayStringValue(wiselib::UString::UTF_8); cout << endl;

    }
}
