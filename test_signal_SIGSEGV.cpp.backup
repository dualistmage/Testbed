#include <iostream>
#include <sstream>

#include <signal.h>

using namespace std;

void signal_handler_SIGSEGV( int signo )
{
    std::cerr << "Catch SIGSEGV. Exit normally" << std::endl;
    exit (0);
}
int main()
{
    signal( SIGSEGV, signal_handler_SIGSEGV );

    int* test = NULL;
    int a = *test + 12; // Segment fault signal occurs.
    cout << "Doesn't Seg fault occur? "<< a << endl;

    return 0;
}

