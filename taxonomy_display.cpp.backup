#include <iostream>
#include <vector>

using std::cout;
using std::endl;

int main()
{

    std::vector<std::string> taxonomyString_;
    std::vector<size_t> taxonomyLevel_;

    taxonomyString_.push_back( "aaa" );
    taxonomyString_.push_back( "bbb" );
    taxonomyString_.push_back( "ccc" );
    taxonomyString_.push_back( "ddd" );
    taxonomyString_.push_back( "eee" );
    taxonomyString_.push_back( "fff" );
    taxonomyLevel_.push_back( 0 );
    taxonomyLevel_.push_back( 1 );
    taxonomyLevel_.push_back( 2 );
    taxonomyLevel_.push_back( 3 );
    taxonomyLevel_.push_back( 1 );
    taxonomyLevel_.push_back( 2 );
    

    size_t taxonomySize = taxonomyString_.size();
    size_t currentTGIndex = 0;
    size_t currentTGLevel = 0;
    while(currentTGIndex < taxonomySize)
    {
        for(size_t i = 0; i < taxonomyLevel_[currentTGIndex];i++)
            cout << "\t";
        cout << "<TgLabel name=\"" << taxonomyString_[currentTGIndex] << "\" num=''";

        if ( currentTGIndex == taxonomySize -1 ) // Last TgLabel
        {
            cout << "/>" << endl;
            for (size_t lv = currentTGLevel - 1; lv > 0; lv--)
            {
                for(size_t i = 0; i < lv;i++)
                    cout << "\t";
                cout << "</TgLabel>" << endl;
            } // end - for

            cout << "</TgLabel>" << endl;

            break;
        } // end - if
        else if ( taxonomyLevel_[currentTGLevel + 1] == currentTGLevel )
        {
            cout << "/>" << endl;
        } // end - else if
        else if ( taxonomyLevel_[currentTGLevel + 1] < currentTGLevel )
        {
            cout << "/>" << endl;
            for (size_t lv = currentTGLevel - 1; lv >= taxonomyLevel_[currentTGLevel + 1]; lv--)
            {
                for(size_t i = 0; i < lv;i++)
                    cout << "\t";
                cout << "</TgLabel>" << endl;
            } // end - for
            currentTGLevel = taxonomyLevel_[currentTGLevel + 1];
        }
        else
        {
            cout << ">" << endl;
            currentTGLevel++;
        } // end - else

        currentTGIndex++;

    } // end - while()

    return 0;
    

} // end - main()
