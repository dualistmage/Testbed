#include <iostream>

using std::cout;
using std::endl;

class Parent {
    public:
        bool operator== (const Parent& obj) const
        {
            if ( pNum != obj.pNum ) return false;
            else return true;
        }
        int pNum;
}; // end - class Parent

class Child : public Parent
{
    public:
        bool operator== (const Child& obj) const
        {
            // -------------[ Here ]
            if ( !this->Parent::operator==( obj ) ) return false; 
            else if ( num != obj.num ) return false;
            else return true;
        }
        int num;
}; // end - TEST

int main()
{
    Child a,b;
    a.num = 2; b.num = 2;
    a.pNum = 3; b.pNum = 3;

    if ( a == b )
        cout << "Equal" << endl;
    else
        cout << "Different" << endl;

    return 0;
} // end - main()
